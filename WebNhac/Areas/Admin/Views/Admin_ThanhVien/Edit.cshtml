@model WebNhac.Models.tbNguoiDung

@{
    ViewBag.Title = "Cập nhật thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            @using (Html.BeginForm("Edit", "Admin_ThanhVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 style="text-align: center; color: red">Cập nhật quốc gia</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaND)
                @Html.HiddenFor(model => model.NgayTao)
                @Html.HiddenFor(model => model.Token)

                <div class="form-group">
                    <span class="control-label col-md-2">Tên người dùng</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenND, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.TenND, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="control-label col-md-2">Email</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="control-label col-md-2">Mật khẩu</span>
                    <div class="col-md-10">
                        <input type="password" name="MatKhau" required class="form-control" />
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-danger w-100" style="background: #fc727a; color: white" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>