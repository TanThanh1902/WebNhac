@model WebNhac.Models.tbTheLoai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("Edit", "Admin_ChuDe", FormMethod.Post, new { @enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 style="text-align: center; color: red">Cập nhật thể loại</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTheLoai)
            @Html.HiddenFor(model => model.AnhTheloai)

            <div class="form-group">
                <span class="control-label col-md-2">Tên thể loại</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2">Ảnh thể loại</span>
                <div class="col-md-10">
                    <input type="file" name="img_chu_de" class="btn btn-danger" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập nhật" class="btn btn-danger w-100" style="background: #fc727a; color: white" />
                </div>
            </div>
        </div>
        }
    </div>
</div>