@using WebNhac.Models
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<tbCaSi>

@{
    ViewBag.Title = "Tất cả ca sỹ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="recommended-grids english-grid" style="padding-left: 31px; padding-right: 20px">
    <div class="recommended-info">
        <ul class="list-group">
            <li class="list-group-item menu">
                <span><a href="/Home/Index"><b>Trang chủ</b></a>&nbsp; / &nbsp;<a href="/QuocGia/TatCaCaSy"><b>Tất cả ca sỹ - </b></a><b>@ViewBag.ketqua</b></span>
            </li>
        </ul>
        <div class="clearfix"> </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 resent-grid recommended-grid show-video-grid" style="margin-top: 1%">
            <div class="resent-grid-img recommended-grid-info">
                <a href="@Url.Action("BaiHatTheoCaSy", "BaiHat", new { id = item.MaCaSi})"><img src="@Url.Content("~/Content/images/CaSy/" + item.AnhCaSi)" alt="" style="width: 100%; height: 150px" /></a>
            </div>
            <div class="resent-grid-info recommended-grid-info info_casy" style="margin-top: 1%;margin-bottom: 4%">
                <br /><br />
                <p class="author" style="width: 100%"><a href="@Url.Action("BaiHatTheoCaSy", "BaiHat", new { id = item.MaCaSi})"><i class="fa fa-microphone">&nbsp;&nbsp;&nbsp;&nbsp;</i>@item.TenCaSi</a></p>
                <p class="author"><a href="@Url.Action("BaiHatTheoCaSy", "BaiHat", new { id = item.MaCaSi})"><i class="fa fa-music">&nbsp;&nbsp;</i>Số bài hát: @item.tbTrinhBays.Count()</a></p>
            </div>
        </div>
    }
    <div class="clearfix"> </div>
    <center>
        <div class="pagination" style="margin-top: 20px">
            @Html.PagedListPager(Model, page => Url.Action("TatCaCaSy", new { page }))
        </div>
    </center>
</div>




