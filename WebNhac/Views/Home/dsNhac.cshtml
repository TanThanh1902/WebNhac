@using WebNhac.Models;
@model List<tbNhac>

<div class="recommended-grids english-grid" style="padding-left: 31px; padding-right: 20px">
    <div class="recommended-info">
        <div class="heading">
            <h3>Nghe gì hôm nay</h3>
        </div>
        <div class="clearfix"> </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 resent-grid recommended-grid show-video-grid" style="margin-top: 1%; ">
            <div class="resent-grid-img recommended-grid-img">
                <a href="@Url.Action("XemChiTiet","HienThi",new {@manhac = item.IDNhac })"><img src="@Url.Content("~/Image/BaiHat/"+item.HinhBaiHat)" alt="" style="width: 100%; height: 120px" /></a>
            </div>
            <div class="resent-grid-info recommended-grid-info">
                <h5><a href="@Url.Action("XemChiTiet","HienThi",new {@manhac = item.IDNhac })" class="title">@item.TenBaiHat</a></h5>
                <p class="author" style="width: 100%; height: 50px"><a href="@Url.Action("NhacTheoCS", "BoSuuTap", new { @id = item.IDCaSy})" class="author">@item.DSCaSy.TenCaSy</a></p>
                <p class="views">@item.LuotNghe Lượt nghe</p>
            </div>
        </div>
    }
    <div class="clearfix"> </div>
</div>

