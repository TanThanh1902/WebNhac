@using WebNhac.Models;
@model List<tbAlbum>


<div class="recommended-grids english-grid" style="padding-left: 31px; padding-right: 20px">
    <div class="recommended-info">
        <div class="heading">
            <h3 style="float: left">Album</h3>
        </div>
        <div class="clearfix"> </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 resent-grid recommended-grid show-video-grid" style="margin-top: 1%">
            <div class="resent-grid-img recommended-grid-info">
                <a href="@Url.Action("BaiHatTheoAlbum", "BaiHat", new { id = item.MaAlbum})"><img src="@Url.Content("~/Content/images/Album/" + item.AnhAlbum)" alt="" style="width: 100%; height: 150px" /></a>
            </div>
            <div class="resent-grid-info recommended-grid-info" style="margin-top: 1%">
                <p class="author" style="width: 100%; height: 50px"><a href="@Url.Action("BaiHatTheoAlbum", "BaiHat", new { id = item.MaAlbum})" class="author">@item.TenAlbum</a></p>
                <p class="author"><a href="@Url.Action("BaiHatTheoAlbum", "BaiHat", new { id = item.MaAlbum})" class="author">Số bài hát: @item.tbAlbumDSNhacs.Count()</a></p>
            </div>
        </div>
    }
    <div class="clearfix"> </div>
    <div style="margin-top: 20px">
        <center><a href="@Url.Action("TatCaChuDe", "ChuDe")" class="btn btn-primary">Xem tất cả</a></center>
    </div>
</div>



