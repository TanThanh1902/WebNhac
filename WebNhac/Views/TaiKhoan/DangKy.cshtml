@model WebNhac.Models.tbNguoiDung



<div id="small-dialog" class="mfp-hide">
    <h3>Đăng ký</h3>
    <div class="social-sits">
        <div class="facebook-button">
            <a href="#">Đăng nhập bằng Facebook</a>
        </div>
        <div class="chrome-button">
            <a href="#">Đăng nhập bằng Google &nbsp;&nbsp;&nbsp;</a>
        </div>
        <div class="button-bottom">
            <p>Bạn đã có tài khoản? <a href="#small-dialog2" class="play-icon popup-with-zoom-anim">Đăng nhập ngay</a></p>
        </div>
    </div>
    <div class="signup">
        @using (Html.BeginForm("DangKy", "TaiKhoan", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="width: 240%">
                    <div class="col-md-10">
                        <input type="text" name="TenND" class="form-control" />
                    </div>
                </div>

                <div class="form-group" style="width: 112%">
                    <div class="col-md-10">
                        <input type="text" name="TaiKhoan" class="form-control" />
                    </div>
                </div>

                <div class="form-group" style="width: 125%">
                    <div class="col-md-10">
                        <input type="password" name="MatKhau" class="form-control" />
                    </div>
                </div>

                <div class="form-group" style="width: 125%">
                    <div class="col-md-10">
                        <input type="password" name="NhapLaiMatKhau" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng Ký" class="btn btn-default" style="margin-left: 12%" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="clearfix"> </div>
</div>
     