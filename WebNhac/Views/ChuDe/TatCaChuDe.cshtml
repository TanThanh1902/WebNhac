@using WebNhac.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<tbTheLoai>

@{
    ViewBag.Title = "Tất cả chủ đề";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="recommended-grids english-grid" style="padding-left: 31px; padding-right: 20px">
    <div class="recommended-info">
        <ul class="list-group">
            <li class="list-group-item menu">
                <span><a href="/Home/Index"><b>Trang chủ</b></a>&nbsp; / &nbsp;<a href="/ChuDe/TatCaChuDe"><b>Tất cả chủ đề - </b></a><b>@ViewBag.ketqua</b></span>
            </li>
        </ul>
        <div class="clearfix"> </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 resent-grid recommended-grid show-video-grid" style="margin-top: 1%">
            <div class="resent-grid-img recommended-grid-info">
                <a href="@Url.Action("BaiHatTheoChuDe", "BaiHat", new { id = item.MaTheLoai})"><img src="@Url.Content("~/Content/images/ChuDe/" + item.AnhTheloai)" alt="" style="width: 100%; height: 150px" /></a>
            </div>
            <div class="resent-grid-info recommended-grid-info info_casy" style="margin-top: 1%; margin-bottom: 4%">
                <br /><br />
                <p class="author" style="width: 100%;"><a href="@Url.Action("BaiHatTheoChuDe", "BaiHat", new { id = item.MaTheLoai})"><i class="fa fa-list-alt">&nbsp;&nbsp;&nbsp;</i>@item.TenTheLoai</a></p>
                <p class="author"><a href="@Url.Action("BaiHatTheoChuDe", "BaiHat", new { id = item.MaTheLoai})"><i class="fa fa-music">&nbsp;&nbsp;&nbsp;</i>Số bài hát: @item.tbNhacs.Count()</a></p>
            </div>
        </div>
    }
    <div class="clearfix"> </div>
    <center>
        <div class="pagination" style="margin-top: 20px">
            @Html.PagedListPager(Model, page => Url.Action("TatCaChuDe", new { page }))
        </div>
    </center>
</div>





