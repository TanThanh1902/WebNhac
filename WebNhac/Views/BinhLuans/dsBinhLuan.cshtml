@using WebNhac.Models;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<tbBinhLuan>
@{ 
    int id = int.Parse(ViewContext.RouteData.Values["id"].ToString());
}
@foreach (var binhluan in Model)
{
    <li class="list-group-item">
        <div class="row">
            <div class="col-sm-2">
                <img src="~/Content/images/CaSy/yua_mikami.jpg" class=" img-circle" style="width: 100%; height: 110px" />
            </div>
            <ul class="col-sm-10" style="list-style-type: none">
                <li><b style="float: left; font-size: 20px">@binhluan.tbNguoiDung.TenND</b></li>
                <br />
                <br />
                <br />
                <li><p style="float: left; font-size: 15px">@binhluan.NoiDungBinhLuan</p></li>
            </ul>
        </div>
    </li>
}
<li class="list-group-item">
    <center>
        @Html.PagedListPager(Model, page => Url.Action("dsBinhLuan", new { id = id, page}),
       PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { HttpMethod = "GET", UpdateTargetId="content_binhluan", OnSuccess="move_bl()" }))
    </center>
</li>